<!DOCTYPE html>
<html lang="en">
  <%- include("layouts/header"); -%>
  <body>
    <%- include("layouts/navbar"); -%>
    <!-- Page Header-->
    <header class="masthead center-content">
      <h1>New Post</h1>
    </header>
    <!-- Main Content-->
    <main class="new-post">
      <form action="/post/new" method="POST">
        <label for="name">Name</label>
        <input class="post-input" type="text" name="title" id="title" />
        <label for="body">Post</label>
        <textarea class="post-input" name="body" id="body"></textarea>
        <button class="submit-button" type="submit">SEND</button>
      </form>
    </main>
  </body>
</html>
